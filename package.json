{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "dev": "npm run sass && concurrently \"npm run sass:watch\" \"npm run postcss:watch\" \"remix dev\"",
    "start": "remix-serve build",
    "sass": "sass styles && npm run css:build",
    "sass:watch": "sass --watch styles",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "css:build": "postcss styles/**/*.css --dir app/styles",
    "postcss:watch": "postcss styles/**/*.css --dir app/styles --watch"
  },
  "dependencies": {
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "@remix-run/serve": "^1.5.1",
    "dayjs": "^1.11.3",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "^1.5.1",
    "@types/lodash": "^4.14.182",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.1",
    "eslint": "^8.15.0",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "sass": "^1.52.2",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.4",
    "watch": "^1.0.2"
  },
  "engines": {
    "node": ">=14"
  }
}
